{
  "name": "basebuddy",
  "version": "1.0.0",
  "description": "A Telegram bot for DeFi interactions on Base chain",
  "main": "dist/telegramBot.js",
  "scripts": {
    "build": "tsc",
    "vercel-build": "npm run build",
    "start": "node dist/telegramBot.js",
    "dev": "nodemon --exec ts-node --transpile-only src/telegramBot.ts",
    "dev:debug": "nodemon --exec ts-node --files src/telegramBot.ts",
    "test": "echo \"Error: no test specified\"; exit 1",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "set-webhook": "ts-node scripts/set-webhook.ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "defi",
    "base",
    "blockchain",
    "ethereum"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@coinbase/wallet-sdk": "^4.3.4",
    "@openzeppelin/contracts": "^5.3.0",
    "@supabase/supabase-js": "^2.50.0",
    "@types/qrcode": "^1.5.5",
    "@uniswap/sdk-core": "^7.7.2",
    "@uniswap/v3-sdk": "^3.25.2",
    "@web3-onboard/coinbase": "^2.4.2",
    "@web3-onboard/core": "^2.24.1",
    "@xmtp/xmtp-js": "^13.0.4",
    "dotenv": "^16.5.0",
    "ethers": "^6.14.3",
    "node-fetch": "^3.3.2",
    "qrcode": "^1.5.4",
    "telegraf": "^4.16.3",
    "typegram": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vercel/node": "^5.3.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0"
  }
}
